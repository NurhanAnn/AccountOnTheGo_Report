<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <ImageView
        android:id="@+id/logo_with_bg2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bedced"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_with_bg_short" />


    <LinearLayout
        android:id="@+id/bg_blue_rounded"
        android:layout_width="265dp"
        android:layout_height="477dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/rectangle_corners_rounded"
        android:divider="@drawable/divider2"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:showDividers="middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/username"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/type_icon"
            android:ems="10"
            android:hint="Username"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textColorHint="#7C8F9A"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/bg_blue_rounded"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bg_blue_rounded" />

        <EditText
            android:id="@+id/password"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/type_icon"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textColorHint="#7C8F9A"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/repassword"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/type_icon"
            android:ems="10"
            android:hint="Repeat password"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textColorHint="#7C8F9A"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/fullname"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/type_icon"
            android:ems="10"
            android:hint="Full name"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textColorHint="#7C8F9A"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/age"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/type_icon"
            android:ems="10"
            android:hint="Age"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textColorHint="#7C8F9A"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edubackground"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/type_icon"
            android:ems="10"
            android:hint="Education Background"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textColorHint="#7C8F9A"
            android:textSize="12sp" />


        <Button
            android:id="@+id/btnsignup"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_bg"
            android:backgroundTint="#BEDCED"
            android:text="Register"
            android:textColor="#000000" />

    </LinearLayout>

    <ImageView
        android:id="@+id/feedback_Icon"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:srcCompat="@drawable/feedback_icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/feedback_Icon"
        app:layout_constraintStart_toStartOf="@+id/feedback_Icon"
        app:layout_constraintTop_toBottomOf="@+id/feedback_Icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:fontFamily="sans-serif-medium"
        android:text="Already have an account?"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_blue_rounded" />

    <TextView
        android:id="@+id/TVLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Log in"
        android:textColor="#112A46"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/btnFAQ"
        android:layout_width="43dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/faq_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>