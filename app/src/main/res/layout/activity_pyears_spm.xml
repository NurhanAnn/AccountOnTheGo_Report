<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bedced"
    tools:context=".Pyears_spm">

    <TextView
        android:id="@+id/TVYears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="241dp"
        android:fontFamily="sans-serif-medium"
        android:text="Choose year :"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#112A46"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BTN2020"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="104dp"
        android:background="@drawable/button_bg"
        android:backgroundTint="#112a46"
        android:text="2020"
        android:textColor="#bedced"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVYears" />

    <Button
        android:id="@+id/BTN2021"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="104dp"
        android:background="@drawable/button_bg"
        android:backgroundTint="#112a46"
        android:text="2021"
        android:textColor="#bedced"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BTN2020" />

</androidx.constraintlayout.widget.ConstraintLayout>