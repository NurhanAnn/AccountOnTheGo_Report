<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logo_with_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_with_bg" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:background="@drawable/background_rectangle_rounded"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:showDividers="middle"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/type_icon"
            android:ems="10"
            android:hint="Username"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHint="#5E8297"
            app:layout_constraintEnd_toEndOf="@+id/bg_blue_rounded"
            app:layout_constraintHorizontal_bias="0.467"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bg_blue_rounded" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/type_icon"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHint="#5E8297"
            app:layout_constraintBottom_toTopOf="@+id/btn_login"
            app:layout_constraintEnd_toEndOf="@+id/bg_blue_rounded"
            app:layout_constraintStart_toStartOf="@+id/bg_blue_rounded"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_weight="2"
            android:background="@drawable/button_bg"
            android:backgroundTint="#004AAD"
            android:text="Login"
            app:layout_constraintBottom_toBottomOf="@+id/bg_blue_rounded"
            app:layout_constraintEnd_toEndOf="@+id/bg_blue_rounded"
            app:layout_constraintStart_toStartOf="@+id/bg_blue_rounded" />


    </LinearLayout>

