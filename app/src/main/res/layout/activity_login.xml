<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logo_with_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BEDCED"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_with_bg" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="299dp"
        android:layout_height="268dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/rectangle_corners_rounded"
        android:divider="@drawable/divider"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:showDividers="middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/input_username"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/type_icon"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:hint="Username"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHint="#7C8F9A" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/type_icon"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:hint="Password"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHint="#7C8F9A" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="127dp"
            android:layout_height="0dp"
            android:layout_marginBottom="32dp"
            android:layout_weight="2"
            android:background="@drawable/button_bg"
            android:backgroundTint="#BEDCED"
            android:text="Login"
            android:textColor="#112A46"
            android:textSize="17sp" />


    </LinearLayout>

